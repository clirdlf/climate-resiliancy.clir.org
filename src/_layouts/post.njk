---
layout: default
---

<section class="page-title bg-primary position-relative">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-white font-tertiary">Blog</h1>
            </div>
        </div>
    </div>
    <!-- background shapes -->
    {% image "src/assets/images/illustrations/page-title.png", "illustration", "rbg-shape-1 w-100", "(min-width: 30em) 50vw, 100vw" %}
    {% image "src/assets/images/illustrations/leaf-pink-round.png", "illustrations", "bg-shape-2", "(min-width: 30em) 50vw, 100vw" %}
    {% image "src/assets/images/illustrations/dots-cyan.png", "illustrations", "bg-shape-3", "(min-width: 30em) 50vw, 100vw" %}
    {% image "src/assets/images/illustrations/leaf-orange.png", "illustrations", "bg-shape-4", "(min-width: 30em) 50vw, 100vw" %}
    {% image "src/assets/images/illustrations/leaf-yellow.png", "illustrations", "bg-shape-5", "(min-width: 30em) 50vw, 100vw" %}
    {% image "src/assets/images/illustrations/dots-group-cyan.png", "illustrations", "bg-shape-6", "(min-width: 30em) 50vw, 100vw" %}
    {% image "src/assets/images/illustrations/leaf-cyan-lg.png", "illustrations", "bg-shape-7", "(min-width: 30em) 50vw, 100vw" %}
</section>

<section class="section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="font-tertiary mb-3">{{ title }}</h3>
                <p class="font-secondary mb-5">Published on {{ page.date | postDate }} by <span class="text-primary">{{ author }}</span></p>
                <div class="content">
                    {%- set image_path = ["src/", image] | join -%}
                    {% image image_path, "post-thumb", "img-fluid rounded float-start me-5 mb-4", "(min-width: 30em) 50vw, 100vw" %}
                    {# <img src="{{ image | url }}" alt="post-thumb" class="img-fluid rounded float-start me-5 mb-4"> #}
                    {{ content | safe }}

                </div>
            </div>
        </div>
    </div>
</section>